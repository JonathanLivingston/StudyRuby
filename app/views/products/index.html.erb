<h1>Список товаров</h1>

<table>
<% @products.each do |product|%>
	<tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
		<td>
			<%= image_tag(product.image_url, class: 'list_image')%>
		</td>
		<td class="list_description">
			<dl>
				<dt><%= link_to product.title, product %></dt>
				<dd><%= truncate(strip_tags(product.description),
					length: 80)%></dd>
			</dl>
		</td>
		<td class="list_actions">
			<%= link_to 'Просмотр', product%><br/>
			<%= link_to 'Редактировать', edit_product_path(product) %><br/>
			<%= link_to 'Удалить', product,
				confirm: 'Действительно удалить?',
				method: :delete %>
		</td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить товар', new_product_path %>
